<% layout("/layouts/boilerplate") -%>

    <body>
        <div class="contaier">
            <div class="row m-0 d-flex login-form-row justify-content-center align-items-center">
                <div class="col-md-6">
                    <h1 class="text-center">Login Form</h1>
                    <form action="/login" method="post" class="border p-2 needs-validation" novalidate>
                        <div>
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" id="username" placeholder="enter the username"
                                class="form-control" required>
                            <div class="invalid-feedback">
                                Please enter username
                            </div>
                        </div>
                        <div>
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" placeholder="enter the password"
                                class="form-control" required>
                            <div class="invalid-feedback">
                                Please enter password
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success my-2">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>